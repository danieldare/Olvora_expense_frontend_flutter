<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration: Trust system certificates for HTTPS -->
    <base-config>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Allow cleartext traffic for localhost (development) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
    
    <!-- Railway production domain - allow HTTPS with system certificates -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">olvoraexpense-dev.up.railway.app</domain>
        <domain includeSubdomains="true">railway.app</domain>
        <domain includeSubdomains="true">google.com</domain>
        <domain includeSubdomains="true">googleapis.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
